<section class="choose-the-plan-rh">
  <div class="container-rh">
    <h2 class="section-title">
      {{ section.settings.title | default: "Choose the plan that works for you" }}
    </h2>
    <div class="pricing-cards-rh">
      {% for block in section.blocks %}
        <div class="{{ block.settings.card_class }} pay-card">
          <div class="price-part">
            <div class="tags">
              {% assign tags = block.settings.tags | split: ',' %}
              {% for tag in tags %}
                <span class="tag">
                  {{ tag | strip }}
                </span>
              {% endfor %}
            </div>
            <h2 class="title">
              {{ block.settings.plan_title }}
            </h2>
            <div class="price">
              {{ block.settings.price }} <br>
              <span>{{ block.settings.price_period }}</span>
            </div>
            <a href="{{ block.settings.button_link }}" class="rh-primary-button">
              {{ block.settings.button_text | default: "Enroll now" }}
            </a>
          </div>
          <div class="features-part">
            {% assign features = block.settings.features | newline_to_br | split: '<br />' %}
            {% for feature in features %}
              {% if feature != blank %}
                <div class="feature">
                  <img src="{{ 'Vector.png' | asset_url }}" alt="">
                  <span>{{ feature | strip }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Pricing Plans",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Choose the plan that works for you"
      }
    ],
    "blocks": [
      {
        "type": "pricing_plan",
        "name": "Pricing Plan",
        "settings": [
          {
            "type": "text",
            "id": "card_class",
            "label": "Card CSS Class",
            "info": "For styling purposes (e.g., access-monthly)"
          },
          {
            "type": "text",
            "id": "tags",
            "label": "Tags (comma separated)",
            "default": "For one person",
            "info": "Separate multiple tags with commas"
          },
          {
            "type": "text",
            "id": "plan_title",
            "label": "Plan Title",
            "default": "All Access monthly"
          },
          {
            "type": "text",
            "id": "price",
            "label": "Price",
            "default": "$249"
          }, {
            "type": "text",
            "id": "price_period",
            "label": "Price Period",
            "default": "/month"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Enroll now"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }, {
            "type": "textarea",
            "id": "features",
            "label": "Features (one per line)",
            "default": "Cancel Anytime\nUnlimited access to our top-rated courses\nHands-on projects with expert feedback\nPersonalized career coaching and interview prep\nProgram Certificates",
            "info": "Enter one feature per line"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "RH Pricing Plans",
        "category": "Pricing",
        "blocks": [
          {
            "type": "pricing_plan",
            "settings": {
              "card_class": "access-monthly",
