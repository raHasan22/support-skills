{% style %}
.rh-about-site-features-section *{
  margin: 0;
  padding: 0;
  letter-spacing: normal;
  line-height: normal;
}
.rh-about-site-features-section {
   padding: {{ section.settings.padding_top_desktop | default: 50 }}px 20px {{ section.settings.padding_bottom_desktop | default: 50 }}px;
   background: #ffffff;
 }
 .rh-about-site-features-section .container-rh {
    max-width: 1420px;
    margin: 0 auto;
 }

/* Features Section Styles */
.features-content-wrapper__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40px;
  width: 100%;
}

.features-header__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24px;
  text-align: center;
  max-width: 1000px;
}

.features-title__rh {
  color: #0d1216;
  font-size: clamp(32px, 4vw, 48px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.04;
  margin: 0;
}

.features-description__rh {
  color: #282c30;
  font-size: clamp(16px, 2.5vw, 20px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 400;
  line-height: 1.6;
  margin: 0;
}

.features-cards-grid__rh {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
  gap: clamp(24px, 4vw, 50px);
  width: 100%;
}

.feature-card__rh {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 26px;
  padding: 26px;
  background: #f8f9f9;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  border-radius: 8px;
  flex: 1;
}

.feature-image-wrapper__rh {
  width: 100%;
  aspect-ratio: 260/224;
  border-radius: 8px;
  overflow: hidden;
}

.feature-image__rh {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.feature-content__rh {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 16px;
  width: 100%;
}

.feature-title__rh {
  color: #0d1216;
  font-size: clamp(20px, 3vw, 32px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.04;
  margin: 0;
}

.feature-description__rh {
  color: rgba(39.23, 39.23, 39.23, 0.80);
  font-size: clamp(16px, 2.5vw, 20px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 400;
  line-height: 1.04;
  margin: 0;
}

/* Responsive Design for Features Section */
@media (max-width: 1200px) {
  .features-cards-grid__rh {
    gap: clamp(20px, 3vw, 40px);
  }
}

@media (max-width: 992px) {
  .features-content-wrapper__rh {
    gap: 32px;
  }
  
  .features-cards-grid__rh {
    gap: 24px;
  }
  
  .feature-card__rh {
    flex: 0 0 calc(50% - 12px);
  }
}

@media (max-width: 768px) {
  .features-cards-grid__rh {
    gap: 20px;
  }
  
  .feature-card__rh {
    flex: 0 0 calc(50% - 10px);
    padding: 20px;
  }
}

@media (max-width: 480px) {
  .rh-about-site-features-section {
    padding: {{ section.settings.padding_top_mobile | default: 40 }}px 15px {{ section.settings.padding_bottom_mobile | default: 40 }}px;
  }
  
  .features-content-wrapper__rh {
    gap: 28px;
  }
  
  .features-header__rh {
    gap: 20px;
  }
  
  .features-cards-grid__rh {
    gap: 16px;
  }
  
  .feature-card__rh {
    flex: 0 0 100%;
    padding: 16px;
  }
}

{% endstyle %}



    <div class="container-rh">
        <div class="features-content-wrapper__rh">
            <div class="features-header__rh">
              <h2 class="features-title__rh">{{ section.settings.title | default: "At SuperSkills, we are forging futures in tech" }}</h2>
              <p class="features-description__rh">{{ section.settings.description | default: "We are delivering impactful and cutting edge tech education that enables individuals and organizations to unlock their potential." }}</p>
            </div>
            <div class="features-cards-grid__rh">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'feature_card' %}
                    <div class="feature-card__rh">
                      <div class="feature-image-wrapper__rh">
                        <img class="feature-image__rh" 
                          src="{% if block.settings.image %}{{ block.settings.image | img_url: '260x224' }}{% else %}https://dummyimage.com/260x224/8b3dff/ffffff&text=Feature+{{ forloop.index }}{% endif %}" 
                          alt="{{ block.settings.image.alt | default: block.settings.title | default: 'Feature' }}" />
                      </div>
                      <div class="feature-content__rh">
                        <h3 class="feature-title__rh">{{ block.settings.title | default: "Feature Title" }}</h3>
                        <p class="feature-description__rh">{{ block.settings.description | default: "Feature description goes here." }}</p>
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
    </div>


