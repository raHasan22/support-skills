{% style %}
.rh-about-site-stats-section *{
  margin: 0;
  padding: 0;
  letter-spacing: normal;
  line-height: normal;
}
.rh-about-site-stats-section {
  padding: {{ section.settings.padding_top_desktop | default: 56 }}px 20px {{ section.settings.padding_bottom_desktop | default: 56 }}px;
  background: #8b3dff;
}
.rh-about-site-stats-section .container-rh {
    max-width: 1420px;
    margin: 0 auto;
}

/* Stats Section Styles */
.stats-content-wrapper__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 34px;
  width: 100%;
}

.stats-description__rh {
  color: #f7f7f7;
  font-size: clamp(18px, 2.5vw, 22px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.6;
  text-align: center;
  margin: 0;
  max-width: 1090px;
}

.stats-grid__rh {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
  gap: clamp(32px, 8vw, 180px);
  width: 100%;
}

.stats-item__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  width: calc(25% - 128px);

}

.stats-number__rh {
  display: flex;
  align-items: baseline;
  justify-content: center;
  text-align: center;
  gap: 4px;
}

.stats-main-number__rh {
  color: white;
  font-size: clamp(40px, 6vw, 64px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.04;
}

.stats-suffix__rh {
  color: white;
  font-size: clamp(28px, 4.5vw, 48px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.04;
}

.stats-label__rh {
  color: #f7f7f7;
  font-size: clamp(16px, 2.5vw, 20px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.6;
  text-align: center;
  margin: 0;
  max-width: 250px;
}

/* Responsive Design for Stats Section */
@media (max-width: 1200px) {
  .stats-grid__rh {
    gap: clamp(24px, 6vw, 128px);
  }

}

@media (max-width: 992px) {
  .stats-grid__rh {
    gap: clamp(20px, 4vw, 96px);
  }

  .stats-item__rh {
    width: calc(50% - 64px);
  }
}

@media (max-width: 768px) {
  .stats-content-wrapper__rh {
    gap: 28px;
  }

  .stats-grid__rh {
    gap: clamp(16px, 3vw, 64px);
  }

}

@media (max-width: 480px) {
  .rh-about-site-stats-section {
    padding: {{ section.settings.padding_top_mobile | default: 40 }}px 15px {{ section.settings.padding_bottom_mobile | default: 40 }}px;
  }

  .stats-content-wrapper__rh {
    gap: 24px;
  }

  .stats-grid__rh {
    gap: 24px;
    flex-direction: column;
    align-items: center;
  }
  .stats-item__rh {
    width: 100%;
  }
}


{% endstyle %}


<div class="rh-about-site-stats-section">
    <div class="container-rh">
        <div class="stats-content-wrapper__rh">
            <p class="stats-description__rh">{{ section.settings.description | default: "Launched in 2013, Support Skills is an online design and publishing tool with a mission to empower everyone in the world to design anything and publish anywhere." }}</p>
            <div class="stats-grid__rh">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'stat_item' %}
                    <div class="stats-item__rh">
                      <div class="stats-number__rh">
                          <span class="stats-main-number__rh">{{ block.settings.main_number | default: "0" }}</span>
                          <span class="stats-suffix__rh">{{ block.settings.suffix | default: "" }}</span>
                      </div>
                      <p class="stats-label__rh">{{ block.settings.label | default: "Statistic label" }}</p>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div> 
    </div>
</div>

