{% style %}
.rh-about-hero-after-section {
    padding: 100px 20px 50px; 
    background: #ffffff;
}
.rh-about-hero-after-section .container-rh {
  max-width: 1420px;
  margin: 0 auto;
}

/* Hero Content Styles */
.hero-content-wrapper__rh {
  display: flex;
  align-items: center;
  gap: 88px;
  flex-wrap: wrap;
}

.section-image-wrapper__rh {
  flex: 1;
}

.section-image__rh {
  width: 100%;
  height: auto;
  background: #d9d9d9;
  border-radius: 8px;
  object-fit: cover;
}

.section-text-content__rh {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.section-title__rh {
  color: #0d1216;
  font-size: clamp(32px, 4vw, 64px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.04;
  margin: 0;
}

.section-description__rh {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.section-text_rh {
  color: #282c30;
  font-size: 16px;
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 400;
  line-height: 1.6;
  margin: 0;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .hero-content-wrapper__rh {
    gap: 64px;
  }
}

@media (max-width: 992px) {
  .hero-content-wrapper__rh {
    gap: 48px;
  }

  .section-title__rh {
    font-size: clamp(28px, 3.5vw, 48px);
  }
}

@media (max-width: 768px) {
  .hero-content-wrapper__rh {
    flex-direction: column;
    gap: 32px;
    text-align: center;
  }

  .section-image-wrapper__rh {
    max-width: 500px;
  }

  .section-text-content__rh {
    align-items: center;
  }

  .section-title__rh {
    font-size: clamp(24px, 3vw, 40px);
  }
}

@media (max-width: 480px) {
  .rh-about-hero-after-section {
    padding: 60px 15px 30px;
  }

  .hero-content-wrapper__rh {
    gap: 24px;
  }

  .section-title__rh {
    font-size: clamp(20px, 2.5vw, 32px);
  }

  .section-text_rh {
    font-size: 14px;
  }
}

{% endstyle %}

<div class="rh-about-hero-after-section">
    <div class="container-rh">
        <div class="hero-content-wrapper__rh">
            <div class="section-image-wrapper__rh">
                <img class="section-image__rh" 
                  src="{% if section.settings.image %}{{ section.settings.image | img_url: '696x472' }}{% else %}https://dummyimage.com/696x472/8b3dff/ffffff&text=About+Image{% endif %}" 
                  alt="{{ section.settings.image.alt | default: section.settings.image_alt | default: 'About Support Skills' }}" />
            </div>
            <div class="section-text-content__rh">
              <h1 class="section-title__rh">{{ section.settings.title | default: "Upskilling talent for the careers of the future" }}</h1>
              <div class="section-description__rh">
                <p class="section-text_rh">{{ section.settings.description | default: "Support Skills began when Stanford instructors Sebastian Thrun and Peter Norvig had a revolutionary idea to offer their Introduction to Artificial Intelligence course online—to anyone, for free. Over 160,000 students in more than 190 countries enrolled, demanding a new way to deliver education. A startling discovery emerged: The top 400 students weren't from Stanford. This revelation sparked a mission to make lifelong learning more equitable and inclusive. Support Skills has been expanding opportunities ever since." }}</p>
              </div>
            </div>
          </div>
    </div>
</div>

{% schema %}
{
  "name": "RH After Hero",
  "settings": [
    {
      "type": "header",
      "content": "Section Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Upskilling talent for the careers of the future"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Support Skills began when Stanford instructors Sebastian Thrun and Peter Norvig had a revolutionary idea to offer their Introduction to Artificial Intelligence course online—to anyone, for free. Over 160,000 students in more than 190 countries enrolled, demanding a new way to deliver education. A startling discovery emerged: The top 400 students were not from Stanford. This revelation sparked a mission to make lifelong learning more equitable and inclusive. Support Skills has been expanding opportunities ever since."
    },
    {
      "type": "header",
      "content": "Section Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "About Support Skills"
    }
  ],
  "presets": [
    {
      "name": "RH About After Hero",
      "category": "About"
    }
  ]
}
{% endschema %}