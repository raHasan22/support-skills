<style>
    .srs-contact-info-section {
        padding: {{ section.settings.section_padding }}px 10px;
        font-family: {{ section.settings.font_family }};
    }
    .srs-contact-info-section *{
    margin: 0;
    letter-spacing: normal;
    }
    .srs-contact-info-section .srs-contact-info-section-container {
        max-width: {{ section.settings.container_width }}px;
        margin: 0 auto;
    }
    
    .srs-contact-info-section .srs-content-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 40px;
        flex-wrap: wrap;
    }
    
    .srs-contact-info-section .srs-information-item {
        display: flex;
        flex-direction: column;
        gap: 24px;
        padding: 22px;
        border-radius: 10px;
        {% comment %} max-width: 416px; {% endcomment %}
        width: 100%;
        flex: 1;
        min-width: 300px;
    }
    
    .srs-contact-info-section .srs-header-section {
        display: flex;
        align-items: center;
        gap: 22px;
    }
    
    .srs-contact-info-section .srs-icon-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .srs-contact-info-section .srs-icon-container svg {
        max-width: 60px;
        max-height: 60px;
        width: 100%;
        height: auto;
    }
    
    .srs-contact-info-section .srs-small-icon-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .srs-contact-info-section .srs-small-icon-container svg {
        max-width: 40px;
        max-height: 40px;
        width: 100%;
        height: auto;
    }
    
    .srs-contact-info-section .srs-medium-icon-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .srs-contact-info-section .srs-medium-icon-container svg {
        max-width: 42px;
        max-height: 34px;
        width: 100%;
        height: auto;
    }
    
    .srs-contact-info-section .srs-large-icon-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .srs-contact-info-section .srs-large-icon-container svg {
        max-width: 43px;
        max-height: 60px;
        width: 100%;
        height: auto;
    }
    
    .srs-contact-info-section .srs-main-title {
        color: {{ section.settings.title_color }};
        font-size: 40px;
        font-family: {{ section.settings.font_family }};
        font-weight: 400;
        line-height: 48px;
        margin: 0;
    }
    
    .srs-contact-info-section .srs-contact-details {
        display: flex;
        flex-direction: row;
        gap: 24px;
        width: 100%;
    }
    
    .srs-contact-info-section   .srs-contact-item {
        display: flex;
        align-items: center;
        gap: 20px;
    }
    
    .srs-contact-info-section .srs-contact-text {
        color: {{ section.settings.contact_text_color }};
        font-size: 20px;
        font-family: {{ section.settings.font_family }};
        font-weight: 400;
        text-decoration: underline;
        line-height: 30px;
        margin: 0;
    }
    
    .srs-contact-info-section .srs-address-section {
        display: flex;
        flex-direction: column;
        gap: 33px;
        width: 100%;
    }
    
    .srs-contact-info-section .srs-address-content {
        width: 100%;
    }
    
    .srs-contact-info-section .srs-address-text {
        color: {{ section.settings.address_text_color }};
        font-size: 16px;
        font-family: {{ section.settings.font_family }};
        font-weight: 400;
        line-height: 24px;
        margin: 0;
    }
    
    .srs-contact-info-section .srs-address-text .highlight {
        text-decoration: underline;
    }
    @media (max-width: 1024px) {
        .srs-contact-info-section .srs-contact-details {
            flex-direction: column;
        }
    }
    
    @media (max-width: 768px) {
        .srs-contact-info-section .srs-content-container {
            flex-direction: column;
            align-items: stretch;
        }
        
        .srs-contact-info-section .srs-information-item {
            min-width: auto;
            max-width: none;
        }
        
        .srs-contact-info-section .srs-main-title {
            font-size: 32px;
            line-height: 40px;
        }
        
        .srs-contact-info-section .srs-contact-text {
            font-size: 18px;
            line-height: 26px;
        }
    }
    .srs-contact-info-section .srs-information-item:last-child{
    max-width: 450px;
}
</style>



<section class="srs-contact-info-section">
    <div class="srs-contact-info-section-container">
        <div class="srs-content-container">
            {% for block in section.blocks %}
                <div class="srs-information-item" {{ block.shopify_attributes }}>
                    {% case block.type %}
                        {% when 'contact_info' %}
                            <div class="srs-header-section">
                                <div class="srs-icon-container">
                                    {{ block.settings.icon_svg }}
                                </div>
                                <h1 class="srs-main-title">{{ block.settings.title }}</h1>
                            </div>
                            <div class="srs-contact-details">
                                <div class="srs-contact-item">
                                    <div class="srs-small-icon-container">
                                        {{ block.settings.contact_item_1_icon }}
                                    </div>
                                    <p class="srs-contact-text">{{ block.settings.contact_item_1_text }}</p>
                                </div>
                                <div class="srs-contact-item">
                                    <div class="srs-medium-icon-container">
                                        {{ block.settings.contact_item_2_icon }}
                                    </div>
                                    <p class="srs-contact-text">{{ block.settings.contact_item_2_text }}</p>
                                </div>
                            </div>
                        {% when 'address_info' %}
                            <div class="srs-address-section">
                                <div class="srs-header-section">
                                    <div class="srs-large-icon-container">
                                        {{ block.settings.icon_svg }}
                                    </div>
                                    <h2 class="srs-main-title">{{ block.settings.title }}</h2>
                                </div>
                                <div class="srs-address-content">
                                    <p class="srs-address-text">{{ block.settings.address_text }}</p>
                                </div>
                            </div>
                    {% endcase %}
                </div>
            {% endfor %}
        </div>
    </div>
</section>

