{% style %}
.rh-join-us-section {
   padding: {{ section.settings.padding_top_desktop | default: 50 }}px 20px {{ section.settings.padding_bottom_desktop | default: 100 }}px;
   background: #ffffff;
 }
 .rh-join-us-section .container-rh {
   max-width: 1420px;
   margin: 0 auto;
 }

/* Join Us Section Styles */
.join-us-content-wrapper__rh {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: clamp(48px, 8vw, 77px) clamp(32px, 6vw, 360px);
  background: linear-gradient(128deg, #00c4cc 0%, #5a32fa 50%, #7d2ae8 100%);
  border-radius: 8px;
  width: 100%;
}

.join-us-inner-content__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30px;
  max-width: 696px;
  width: 100%;
}

.join-us-text-section__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24px;
  width: 100%;
}

.join-us-title__rh {
  color: white;
  font-size: clamp(32px, 4vw, 48px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  line-height: 1.04;
  text-align: center;
  margin: 0;
}

.join-us-cta-button__rh {
  display: inline-block;
  padding: 7px 30px;
  background: white;
  border: none;
  border-radius: 8px;
  color: #0d1216;
  font-size: 16px;
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 600;
  line-height: 1.6;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.join-us-cta-button__rh:hover {
  background: #f8f9f9;
  transform: translateY(-2px);
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15);
}

/* Responsive Design for Join Us Section */
@media (max-width: 1200px) {
  .join-us-content-wrapper__rh {
    padding: clamp(40px, 6vw, 56px) clamp(24px, 4vw, 240px);
  }
}

@media (max-width: 992px) {
  .join-us-content-wrapper__rh {
    padding: clamp(32px, 5vw, 48px) clamp(16px, 3vw, 160px);
  }
  
  .join-us-inner-content__rh {
    gap: 24px;
  }
}

@media (max-width: 768px) {
  .join-us-content-wrapper__rh {
    padding: clamp(24px, 4vw, 40px) clamp(16px, 2vw, 80px);
  }
  
  .join-us-inner-content__rh {
    gap: 20px;
  }
  
  .join-us-text-section__rh {
    gap: 16px;
  }
}

@media (max-width: 480px) {
  .rh-join-us-section {
    padding: {{ section.settings.padding_top_mobile | default: 40 }}px 15px {{ section.settings.padding_bottom_mobile | default: 60 }}px;
  }
  
  .join-us-content-wrapper__rh {
    padding: 24px 16px;
  }
  
  .join-us-inner-content__rh {
    gap: 16px;
  }
  
  .join-us-cta-button__rh {
    padding: 8px 24px;
    font-size: 14px;
  }
}
{% endstyle %}


    <div class="container-rh">
        <div class="join-us-content-wrapper__rh">
            <div class="join-us-inner-content__rh">
              <div class="join-us-text-section__rh">
                <h2 class="join-us-title__rh">{{ section.settings.title | default: "Join Super Skills today" }}</h2>
              </div>
              {% if section.settings.button_text != blank and section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="join-us-cta-button__rh">{{ section.settings.button_text }}</a>
