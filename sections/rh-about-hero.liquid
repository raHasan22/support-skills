{% style %}
 .rh-about-hero-section *{
   margin: 0;
   padding: 0;
   letter-spacing: normal;
   line-height: normal;
 }
 .rh-about-hero-section {
   padding: 45px 20px 70px;
   background: linear-gradient(135deg, #f5fcfd 0%, #f0f8ff 100%);
 }
 .rh-about-hero-section .container-rh {
    max-width: 1420px;
    margin: 0 auto;
 }

/* Hero Section Styles */
.hero-main-content-wrapper__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 3rem;
  width: 100%;
  padding: 350px 0 300px;
  position: relative;
}

.hero-text-section__rh {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.25rem;
  text-align: center;
  max-width: 58.75rem;
  width: 100%;
}

.hero-main-title__rh {
  margin: 0;
  line-height: 1.04;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0;
}

.hero-title-part1__rh {
  color: #0d1216;
  font-size: clamp(48px, 8vw, 100px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  display: block;
}

.hero-title-part2__rh {
  background: linear-gradient(135deg, #00a0a8 0%, #5a32fa 50%, #7d2ae8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: clamp(48px, 8vw, 100px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 500;
  display: block;
}

.hero-main-description__rh {
  color: #282c30;
  font-size: clamp(16px, 2.5vw, 20px);
  font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 400;
  line-height: 1.6;
  margin: 0;
  max-width: 50rem;
}



.hero-image-item__rh {
  overflow: hidden;
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  position: absolute;
  border-radius: 8px;
  overflow: hidden;
}

.hero-image-item__rh.one {
  top: 70px;                 
  left: 50px;
  width: 200px;
  height: 180px;
}

.hero-image-item__rh.two {
  top: 0;
  right: 70px;
  width: 250px;
  height: 250px;
}

.hero-image-item__rh.three {
  top: 50%;
  left: 50px;
  transform: translateY(-50%);
  width: 120px;
  height: 120px;
}

.hero-image-item__rh.four {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 200px;
  height: 140px;
}

.hero-image-item__rh.five {
  bottom: 0;
  left: 0;
  width: 320px;
  height: 210px;
}

.hero-image-item__rh.six {
  bottom: 50px;
  right: 100px;
  width: 300px;
  height: 180px;
}

.hero-image__rh {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

