<section class="landing-container-rh">
  <section class="business-section">
    <div class="business-content">
      <div class="business-info">
        <h2 class="main-heading">{{ section.settings.business_heading }}</h2>
        <div class="features-container">
          <h3 class="features-heading">
            {{ section.settings.features_heading }}
          </h3>
          
          {% for block in section.blocks %}
            {% if block.type == 'business_feature' %}
              <div class="feature-item">
                <img
                  src="{{ block.settings.feature_icon | img_url: '50x50' }}"
                  alt="{{ block.settings.feature_icon.alt }}"
                  class="feature-icon"
                />
                <p class="feature-text">{{ block.settings.feature_text }}</p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="cta-container">
          <a href="{{ section.settings.primary_button_link }}" class="cta-button primary">
            {{ section.settings.primary_button_text }}
          </a>
          <a href="{{ section.settings.secondary_button_link }}" class="cta-button secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        </div>
      </div>
      <div class="business-image-container">
        <img
          src="{{ section.settings.business_image | img_url: '800x' }}"
          alt="{{ section.settings.business_image.alt }}"
          class="business-image"
        />
      </div>
    </div>
  </section>

  <section class="government-section">
    <div class="government-content">
      <div class="government-info">
        <div class="government-text">
          <h2 class="government-heading">{{ section.settings.government_heading }}</h2>
          <p class="government-description">
            {{ section.settings.government_description }}
          </p>
        </div>
        <a href="{{ section.settings.government_button_link }}" class="cta-button secondary">
          {{ section.settings.government_button_text }}
        </a>
      </div>
      <img
        src="{{ section.settings.government_image | img_url: '800x' }}"
        alt="{{ section.settings.government_image.alt }}"
        class="government-image"
      />
    </div>
  </section>
</section>

