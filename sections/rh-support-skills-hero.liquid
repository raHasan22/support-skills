<section class="rh-homepage-hero-section">
  <div class="container-rh">
    <div class="headings-btns">
      <h1 class="site-title">
        {% assign title_lines = section.settings.title | newline_to_br | split: '<br />' %}
        {% for line in title_lines %}
          {% if forloop.last %}
            <span>{{ line }}</span>
          {% else %}
            {{ line }}<br />
          {% endif %}
        {% endfor %}
      </h1>
      <p>{{ section.settings.subtitle }}</p>
      <a href="{% if section.settings.button_link != blank %}{{ section.settings.button_link }}{% else %}{{ routes.collections_url }}/all{% endif %}" class="rh-primary-button">
        {{ section.settings.button_text }}
      </a>
    </div>
    <div class="slider-rh-homepage-hero">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="slider-card" style="background: linear-gradient(180deg, {{ block.settings.color_start }} 0%, {{ block.settings.color_end }} 100%);">
                <div class="icon-cate-rh">
                  <div class="icon">
                    {% if block.settings.icon != blank %}
                      <img src="{{ block.settings.icon | img_url: '100x' }}" alt="{{ block.settings.category }}" />
                    {% else %}
                      <img src="{{ 'Subject category.png' | asset_url }}" alt="{{ block.settings.category }}" />
                    {% endif %}
                  </div>
                  <a href="{{ block.settings.category_link }}">{{ block.settings.category }}</a>
                </div>
                <div class="image-box-cate">
                  {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | img_url: '300x' }}" alt="{{ block.settings.category }}" />
                  {% else %}
                    <img src="{{ 'AI.png' | asset_url }}" alt="{{ block.settings.category }}" />
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </div>
</section>


<!-- Add Swiper JS CDN and initialization -->


