{%- style -%}
    /* Footer Styles */
  .nxt-footer__area {
    align-items: stretch;
    align-self: stretch;
    display: flex;
    padding: 100px 40px;
    flex-direction: column;
    justify-content: start;
    background-color: #fff;
    font-family: Bricolage Grotesque, -apple-system, Roboto, Helvetica, sans-serif;
  }

  .footer-container {
    max-width: 1416px;
    width: 100%;
    margin: 0 auto;
  }

  /* Main Navigation Section */
  .footer-navigation {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px 24px;
    width: 100%;
  }

  .footer-column {
    min-width: 200px;
  }

  .column-heading {
    color: #0d1216;
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.4;
  }

  .footer-links {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .footer-links li {
    margin-top: 12px;
  }

  .footer-links li:first-child {
    margin-top: 0;
  }

  .footer-link {
    color: #6e7173;
    text-decoration: none;
    font-size: 14px;
    line-height: 1.6;
    transition: color 0.3s ease;
    display: inline-block;
  }

  .footer-link:hover {
    color: #8b3dff;
  }

  /* Newsletter Section */
  .newsletter-section {
    grid-column: span 2;
  }

  .newsletter-content {
    max-width: 100%;
    margin-bottom: 24px;
  }

  .newsletter-heading {
    color: #0d1216;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
  }

  .newsletter-description {
    color: #6e7173;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.6;
    margin: 8px 0 0;
  }

  .newsletter-form {
    display: flex;
    align-items: stretch;
    gap: 16px;
    width: 100%;
  }

  .input-wrapper {
    flex: 1;
    min-width: 0;
  }

  .newsletter-input {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    font-size: 14px;
    color: #0d1216;
    background: #fff;
    font-family: inherit;
    transition: border-color 0.3s ease;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: #8b3dff;
  }

  .newsletter-input::placeholder {
    color: #6e7173;
  }

  .newsletter-button {
    padding: 14px 32px;
    background: #8b3dff;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    font-family: inherit;
    transition: background-color 0.3s ease;
    white-space: nowrap;
    min-width: 120px;
  }

  .newsletter-button:hover {
    background: #7433d9;
  }

  /* Footer Bottom Section */
  .footer-bottom {
    margin-top: 64px;
    padding-top: 32px;
    border-top: 1px solid rgba(57, 76, 96, 0.15);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 32px;
  }

  .copyright-section {
    flex: 1;
    min-width: 280px;
    text-align: center;
  }

  .copyright-notice,
  .cookie-notice {
    color: #6e7173;
    font-size: 14px;
    line-height: 1.6;
    margin: 0;
  }

  .cookie-notice {
    margin-top: 8px;
  }

  .legal-links {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .legal-link {
    color: #6e7173;
    font-size: 14px;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .legal-link:hover {
    color: #8b3dff;
  }

  .divider {
    width: 1px;
    height: 16px;
    background-color: #6e7173;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .social-icon {
    width: 24px;
    height: 24px;
    transition: opacity 0.3s ease;
  }

  .social-icon:hover {
    opacity: 0.8;
  }

  /* Desktop Large (>1200px) */
  @media (min-width: 1201px) {
    .footer-navigation {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Desktop Medium (992px - 1200px) */
  @media (max-width: 1200px) {
    .nxt-footer__area {
      padding: 80px 32px;
    }

    .footer-navigation {
      grid-template-columns: repeat(3, 1fr);
    }

    .newsletter-section {
      grid-column: 2 / span 2;
    }
  }

  /* Tablet (768px - 991px) */
  @media (max-width: 991px) {
    .nxt-footer__area {
      padding: 64px 24px;
    }

    .footer-navigation {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px 24px;
    }

    .newsletter-section {
      grid-column: span 2;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-button {
      width: 100%;
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      margin-top: 48px;
      gap: 24px;
    }

    .copyright-section {
      min-width: 0;
      width: 100%;
    }
  }

  /* Mobile (<768px) */
  @media (max-width: 767px) {
    .nxt-footer__area {
      padding: 48px 20px;
    }

    .footer-navigation {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .newsletter-section {
      grid-column: span 1;
    }

    .column-heading,
    .newsletter-heading {
      font-size: 16px;
      margin: 0 0 12px;
    }

    .footer-links li {
      margin-top: 8px;
    }

    .footer-link,
    .newsletter-description,
    .copyright-notice,
    .cookie-notice,
    .legal-link {
      font-size: 14px;
    }

    .newsletter-content {
      margin-bottom: 16px;
    }

    .footer-bottom {
      margin-top: 40px;
      padding-top: 24px;
      gap: 20px;
    }

    .legal-links {
      gap: 12px;
      margin-top: 12px;
    }

    .divider {
      display: none;
    }

    .social-links {
      gap: 12px;
    }
  }
{%- endstyle -%}

<footer class="nxt-footer__area">
  <div class="footer-container">
    <div class="footer-main">
      <nav class="footer-navigation">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'menu' %}
              <section class="footer-column">
                <h3 class="column-heading">{{ block.settings.heading }}</h3>
                <ul class="footer-links">
                  {% for link in linklists[block.settings.menu].links %}
                    <li>
                      <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              </section>

            {% when 'certificate' %}
              <section class="certificate-section">
                <div class="certificate-content">
                  <h3 class="certificate-heading">{{ block.settings.heading }}</h3>
                  <p class="certificate-description">
                    {{ block.settings.description }}
                  </p>
                </div>
                <form method="post" action="/contact#ContactFooter" id="ContactFooter" accept-charset="UTF-8" class="certificate-form">
                  <input type="hidden" name="form_type" value="customer">
                  <input type="hidden" name="utf8" value="âœ“">
                  <div class="input-wrapper">
                    <input type="email" 
                      name="contact[email]"
                      class="certificate-input"
                      value=""
                      placeholder="{{ block.settings.placeholder }}"
                      required
                    >
                  </div>
                  <button type="submit" class="check-button">
                    <span class="button-text">{{ block.settings.button_text }}</span>
                  </button>
                </form>
              </section>
          {% endcase %}
        {% endfor %}
      </nav>

      <div class="footer-bottom">
        <div class="copyright-section">
          <div class="copyright-text">
            <p class="copyright-notice">
              &copy; {{ 'now' | date: '%Y' }}
              {{ shop.name }}. All rights reserved.
            </p>
            <p class="cookie-notice">
              {{ section.settings.cookie_notice }}
            </p>
          </div>
          <div class="legal-links">
            {% for link in linklists[section.settings.legal_menu].links %}
              <a href="{{ link.url }}" class="legal-link">{{ link.title }}</a>
              {% unless forloop.last %}<span class="divider"></span>{% endunless %}
            {% endfor %}
          </div>
        </div>

        <div class="social-links">
          {% if section.settings.show_social_icons %}
            {% render 'social-icons' %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "RH Footer",
  "max_blocks": 6,
  "settings": [
    {
      "type": "header",
      "content": "Footer settings"
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "Legal menu"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "text",
      "id": "cookie_notice",
      "label": "Cookie notice text",
      "default": "We use cookies and other data collection technologies to provide the best experience for our customers."
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Navigation menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Menu"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "certificate",
      "name": "Newsletter Subscription",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Subscribe to our newsletter"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Stay up to date with our latest courses, updates, and educational resources."
        },
        {
          "type": "text",
          "id": "placeholder",
          "label": "Input placeholder",
          "default": "Enter your email"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Subscribe"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RH Footer",
      "category": "custom"
    }
  ]
}
{% endschema %}
