<section class="single-teacher-details">
  <div class="container">
    {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="swiper single-testi-slider">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="testi-single-card-pr">
              <div class="instructor-meta">
                <div
                class="img-wrapper"
                style="--before-bg: url('{{ block.settings.background_image | img_url: 'master' }}')"
              >
                {% if block.settings.instructor_image != blank %}
                  <img src="{{ block.settings.instructor_image | img_url: '300x300' }}" alt="{{ block.settings.name }}">
                {% else %}
                  <img src="{{ 'placeholder-image.png' | asset_img_url: '300x300' }}" alt="Instructor placeholder">
                {% endif %}
              </div>
              <div class="name-designation">
                <span class="name">{{ block.settings.name }}</span>
                <span class="designation">{{ block.settings.designation }}</span>
              </div>
              </div>
              <div class="instructor-details">
                <span>{{ block.settings.bio }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-button-next swiper-btn"></div>
    <div class="swiper-button-prev swiper-btn"></div>
    <div class="swiper-pagination-ins"></div>
  </div>
</section>

<style>
    .single-teacher-details .swiper {
        width: 100%;
        height: 100%;
      }

      .single-teacher-details .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .single-teacher-details .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .single-teacher-details .swiper-btn{
      width: 48px !important;
      height: 48px !important;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0px 5px 10px -4px #0000001A;
  backdrop-filter: blur(50px);
      border: 1px solid #394C6026;
      border-radius: 100px;

  }
  .single-teacher-details .swiper-btn:after{
      font-size: 20px !important;
      color: #7C7F81;
  }

  .testi-single-card-pr {
     max-width:350px;
     background: linear-gradient(180deg, #F0E7FF 0%, #FFFFFF 100%);
     padding: 24px;
     border-radius: 8px;
     border: 1px solid #FAFAFA;
  }

  .testi-single-card-pr  .instructor-meta {
     display: flex;
     align-items: center;
     gap: 16px;

  }

  .testi-single-card-pr  .instructor-meta .name-designation {
     width: calc(100% - 70px);
     display: flex;
     flex-direction: column;
  }

  .testi-single-card-pr  .instructor-meta .img-wrapper {
     width: 56px;
  height: 56px;
  border-radius: 128px;
     position: relative;
  }
  .testi-single-card-pr  .instructor-meta .img-wrapper:before{
     content: "";
     background-image: var(--before-bg);
     width: 32px;
     height: 32px;
     position: absolute;
     top: -25px;
     left: -20px;
  }
  .testi-single-card-pr  .instructor-meta .img-wrapper img{
     width: 100%;
     height: 100%;
  }

  .testi-single-card-pr  .instructor-meta .name-designation span.name {
     font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 600;
  font-size: 16px;
  line-height: 160%;
  letter-spacing: normal;
  color: #0D1216;
  text-align: start;
  }
  .testi-single-card-pr  .instructor-meta .name-designation span.designation {
     font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 400;
  font-size: 14px;
  line-height: 160%;
  letter-spacing: normal;
  color: #45494C;
  text-align: start;
  }
  .testi-single-card-pr .instructor-details{
        margin-top: 16px;
        text-align: start;
  }
  .testi-single-card-pr .instructor-details span{
     font-family: "Bricolage Grotesque", sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 160%;
  letter-spacing: normal;
  color: #282C30;
  text-align: start;
  }
  .single-teacher-details .container{
      max-width: 1416px;
      margin: 0 auto;
      position: relative;
  }
  .single-teacher-details .swiper-pagination-ins span{
      max-width: 80px;
      width: 100%;
      height: 4px;
      border-radius: 8px;
  }
  section.single-teacher-details .swiper-pagination-ins{
      bottom: -30px;
  }
  section.single-teacher-details .swiper-button-next {
      right: -60px
  }
  section.single-teacher-details .swiper-button-prev {
      left: -60px
  }
  .single-teacher-details .swiper-btn {
      top: 40%
  }

  section.single-teacher-details {
    padding: 100px 20px;
    overflow: hidden;
}
section.single-teacher-details > .container > h2{
    font-family: "Bricolage Grotesque";
font-weight: 500;
font-size: 48px;
line-height: 104%;
letter-spacing: normal;
text-align: center;
color: #282C30;
    margin: 0 0 64px
}
  @meidia (max-width: 767px){
    section.single-teacher-details > .container > h2{
    font-size: 28px;
    margin: 0 0 32px
}
}
</style>

