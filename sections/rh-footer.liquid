{%- style -%}
    /* Footer Styles */
  .nxt-footer__area {
    align-items: stretch;
    align-self: stretch;
    display: flex;
    padding-left: 252px;
    padding-right: 252px;
    padding-top: 100px;
    flex-direction: column;
    justify-content: start;
    background-color: #fff;
    font-family: Bricolage Grotesque, -apple-system, Roboto, Helvetica, sans-serif;
  }

  @media (max-width: 991px) {
    .nxt-footer__area {
      padding-left: 20px;
      padding-right: 20px;
    }
  }

  /* Main Navigation Section */
  .footer-navigation {
    display: flex;
    width: 100%;
    align-items: start;
    gap: 24px;
    line-height: 1.6;
    justify-content: start;
    flex-wrap: wrap;
  }

  @media (max-width: 991px) {
    .footer-navigation {
      max-width: 100%;
    }
  }

  .footer-column {
    min-width: 240px;
    flex-grow: 1;
    flex-shrink: 1;
    width: 211px;
  }

  .column-heading {
    color: #0d1216;
    font-size: 18px;
    font-weight: 600;
    margin: 0;
  }

  .footer-links {
    margin-top: 16px;
    width: 100%;
    font-size: 14px;
    color: #0d1216;
    font-weight: 400;
    list-style-type: none;
    padding: 0;
    margin-bottom: 0;
  }

  .footer-links li {
    margin-top: 8px;
  }

  .footer-links li:first-child {
    margin-top: 0;
  }

  .footer-link {
    color: #0d1216;
    text-decoration: none;
  }

  /* Certificate Validator Section */
  .certificate-section {
    align-self: start;
    margin-top: 48px;
  }

  @media (max-width: 991px) {
    .certificate-section {
      max-width: 100%;
      margin-top: 40px;
    }
  }

  .certificate-content {
    max-width: 100%;
    width: 694px;
  }

  .certificate-heading {
    color: #0d1216;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 991px) {
    .certificate-heading {
      max-width: 100%;
    }
  }

  .certificate-description {
    color: #282c30;
    font-size: 14px;
    font-weight: 400;
    line-height: 22px;
    margin-top: 8px;
    margin-bottom: 0;
  }

  @media (max-width: 991px) {
    .certificate-description {
      max-width: 100%;
    }
  }

  .certificate-form {
    display: flex;
    margin-top: 12px;
    align-items: center;
    gap: 24px;
    font-size: 16px;
    line-height: 1.6;
    justify-content: start;
    flex-wrap: wrap;
  }

  @media (max-width: 991px) {
    .certificate-form {
      max-width: 100%;
    }
  }

  .input-wrapper {
    align-self: stretch;
    min-width: 240px;
    margin-top: auto;
    margin-bottom: auto;
    width: 456px;
  }

  @media (max-width: 991px) {
    .input-wrapper {
      max-width: 100%;
    }
  }

  .certificate-input {
    color: #7c7f81;
    align-self: stretch;
    border-radius: 8px;
    border: 1px solid #939197;
    width: 100%;
    padding: 12px 16px;
    gap: 8px;
    background-color: #fff;
    font-family: inherit;
    font-size: 16px;
    box-sizing: border-box;
  }

  @media (max-width: 991px) {
    .certificate-input {
      max-width: 100%;
    }
  }

  .check-button {
    min-width: 120px;
    justify-content: center;
    align-items: center;
    border-radius: 8px;
    align-self: stretch;
    display: flex;
    margin-top: auto;
    margin-bottom: auto;
    padding: 13px 32px;
    gap: 6px;
    color: #fff;
    font-weight: 500;
    white-space: nowrap;
    text-align: center;
    width: 216px;
    background-color: #8b3dff;
    border: none;
    cursor: pointer;
    font-family: inherit;
    font-size: 16px;
  }

  @media (max-width: 991px) {
    .check-button {
      padding-left: 20px;
      padding-right: 20px;
      white-space: initial;
    }
  }

  .button-text {
    color: #fff;
    align-self: stretch;
    margin-top: auto;
    margin-bottom: auto;
  }

  .search-icon {
    align-self: stretch;
    display: flex;
    margin-top: auto;
    margin-bottom: auto;
    width: 16px;
    flex-shrink: 0;
    height: 16px;
  }

  /* Footer Bottom Section */
  .footer-bottom {
    justify-content: center;
    align-items: start;
    border-top: 1px solid rgba(57, 76, 96, 0.15);
    display: flex;
    margin-top: 48px;
    width: 100%;
    padding-top: 34px;
    padding-bottom: 34px;
    gap: 40px 100px;
    flex-wrap: wrap;
  }

  @media (max-width: 991px) {
    .footer-bottom {
      max-width: 100%;
      margin-top: 40px;
    }
  }

  /* Copyright Section */
  .copyright-section {
    display: flex;
    min-width: 240px;
    flex-direction: column;
    align-items: stretch;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.6;
    justify-content: start;
    width: 774px;
  }

  @media (max-width: 991px) {
    .copyright-section {
      max-width: 100%;
    }
  }

  .copyright-text {
    width: 100%;
    color: #6e7173;
    text-align: center;
  }

  @media (max-width: 991px) {
    .copyright-text {
      max-width: 100%;
    }
  }

  .copyright-notice {
    color: #6e7173;
    margin: 0;
  }

  @media (max-width: 991px) {
    .copyright-notice {
      max-width: 100%;
    }
  }

  .cookie-notice {
    color: #6e7173;
    margin-top: 4px;
    margin-bottom: 0;
  }

  @media (max-width: 991px) {
    .cookie-notice {
      max-width: 100%;
    }
  }

  .legal-links {
    align-self: center;
    display: flex;
    margin-top: 8px;
    align-items: center;
    gap: 8px;
    color: #0d1216;
    justify-content: start;
  }

  .legal-link {
    color: #0d1216;
    align-self: stretch;
    margin-top: auto;
    margin-bottom: auto;
    text-decoration: none;
  }

  .divider {
    align-self: stretch;
    display: flex;
    margin-top: auto;
    margin-bottom: auto;
    width: 1px;
    flex-shrink: 0;
    height: 16px;
    background-color: #0d1216;
  }

  /* Social Links */
  .social-links {
    display: flex;
    align-items: center;
    gap: 8px;
    justify-content: start;
  }

  .social-link {
    text-decoration: none;
  }

  .social-icon {
    aspect-ratio: 1;
    object-fit: contain;
    object-position: center;
    width: 24px;
    align-self: stretch;
    margin-top: auto;
    margin-bottom: auto;
    flex-shrink: 0;
  }
{%- endstyle -%}

<footer class="nxt-footer__area">
  <div class="footer-main">
    <nav class="footer-navigation">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu' %}
            <section class="footer-column">
              <h3 class="column-heading">{{ block.settings.heading }}</h3>
              <ul class="footer-links">
                {% for link in linklists[block.settings.menu].links %}
                  <li>
                    <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </section>

          {% when 'certificate' %}
            <section class="certificate-section">
              <div class="certificate-content">
                <h3 class="certificate-heading">{{ block.settings.heading }}</h3>
                <p class="certificate-description">
                  {{ block.settings.description }}
                </p>
              </div>
              <form method="post" action="/contact#ContactFooter" id="ContactFooter" accept-charset="UTF-8" class="certificate-form">
                <input type="hidden" name="form_type" value="customer">
                <input type="hidden" name="utf8" value="âœ“">
                <div class="input-wrapper">
                  <input type="email" 
                    name="contact[email]"
                    class="certificate-input"
                    value=""
                    placeholder="{{ block.settings.placeholder }}"
                    required
                  >
                </div>
                <button type="submit" class="check-button">
                  <span class="button-text">{{ block.settings.button_text }}</span>
                </button>
              </form>
            </section>
        {% endcase %}
      {% endfor %}
    </nav>

    <div class="footer-bottom">
      <div class="copyright-section">
        <div class="copyright-text">
          <p class="copyright-notice">
            &copy; {{ 'now' | date: '%Y' }}
            {{ shop.name }}. All rights reserved.
          </p>
          <p class="cookie-notice">
            {{ section.settings.cookie_notice }}
          </p>
        </div>
        <div class="legal-links">
          {% for link in linklists[section.settings.legal_menu].links %}
            <a href="{{ link.url }}" class="legal-link">{{ link.title }}</a>
            {% unless forloop.last %}<span class="divider"></span>{% endunless %}
          {% endfor %}
        </div>
      </div>

      <div class="social-links">
        {% if section.settings.show_social_icons %}
          {% render 'social-icons' %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "RH Footer",
  "max_blocks": 6,
  "settings": [
    {
      "type": "header",
      "content": "Footer settings"
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "Legal menu"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "text",
      "id": "cookie_notice",
      "label": "Cookie notice text",
      "default": "We use cookies and other data collection technologies to provide the best experience for our customers."
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Navigation menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Menu"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "certificate",
      "name": "Newsletter Subscription",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Subscribe to our newsletter"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Stay up to date with our latest courses, updates, and educational resources."
        },
        {
          "type": "text",
          "id": "placeholder",
          "label": "Input placeholder",
          "default": "Enter your email"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Subscribe"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RH Footer",
      "category": "custom"
    }
  ]
}
{% endschema %}
